<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp10"
    android:background="@drawable/bg_custom_toast_three">

    <com.liveservey.dynamicview.customview.CustomTextView
        android:text="Somaarth-3 Application was idle for more than 5 minutes. \nKindly enter the password to proceed."
        android:gravity="center"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/colorPrimary"
        android:paddingStart="@dimen/dp10"
        android:paddingEnd="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.liveservey.dynamicview.customview.CustomTextView
        android:id="@+id/etReEnterPass"
        android:layout_marginTop="@dimen/dp10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp10"
        android:inputType="textPassword"
        android:minLines="1"
        android:focusableInTouchMode="true"
        android:maxLength="30"
        android:imeOptions="actionDone"
        android:background="@drawable/rounded_edit_view"/>
    <com.liveservey.dynamicview.customview.CustomTextView
        android:id="@+id/tvDone"
        android:text="Submit"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/dp10"
        android:layout_marginEnd="@dimen/dp10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>